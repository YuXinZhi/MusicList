<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="70sp" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/word"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#e6e6e6"
            android:textSize="16sp"
            android:visibility="gone" />
    </ScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/category_item_bg77" />

    <ImageView
        android:id="@+id/dssfsgsdgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/category_item_bg77" />

    <com.cn.lyric.LrcView
        android:id="@+id/LyricShow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:id="@+id/nolrc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:src="@drawable/find_device_warning" />

        <TextView
            android:id="@+id/shoudonglrc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="手动查找歌词"
            android:textColor="#616161"
            android:textSize="21sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/category_item_bg77" />
    </LinearLayout>

    <ListView
        android:id="@+id/erllist"
        android:layout_width="wrap_content"
        android:layout_height="1sp"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:divider="@drawable/floating_view" />

</RelativeLayout>