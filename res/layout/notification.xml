<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
   >

    
    <ImageView
        android:id="@+id/gfdhstrdsga"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher" />
    
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:layout_marginLeft="64dp"
    android:layout_centerVertical="true"
    android:layout_toLeftOf="@+id/but5t5onnot5i"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/noticationname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="优雅音乐，享受优雅 "
        android:textColor="#ffffff"
        android:textSize="16sp"
          android:marqueeRepeatLimit="marquee_forever" 
                android:focusableInTouchMode="true" 
                android:scrollHorizontally="true"
                android:ellipsize="marquee" 
                android:focusable="true" 
         />

    <TextView
        android:id="@+id/noticationsinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="music"
        android:textColor="#b5b5b5"
          android:marqueeRepeatLimit="marquee_forever" 
                android:focusableInTouchMode="true" 
                android:scrollHorizontally="true"
                android:ellipsize="marquee" 
                android:focusable="true" 
                android:layout_marginTop="2sp"
        android:textSize="16sp" />
</LinearLayout>

<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:layout_centerVertical="true"
    android:id="@+id/but5t5onnot5i"
    android:layout_alignParentRight="true"

    android:orientation="horizontal" >
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notificationplay"
        android:src="@drawable/nitificapause" />
            <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notificationnext"
        android:src="@drawable/notificanext"/>
    </LinearLayout>


</RelativeLayout>